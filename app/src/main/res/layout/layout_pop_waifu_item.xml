<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_waifu_item"
    android:layout_width="match_parent"
    android:layout_height="340dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="6dp"
        app:contentPadding="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="@color/popbarcolor">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_pop_config"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_96"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_set_title"
                android:background="#dd232F58"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff"
                    android:text="Conjunto: "/>

                <TextView
                    android:id="@+id/tv_waifu_setname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="-nombre diseÃ±o-"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_config_layout"
                android:background="#33000000"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toTopOf="@id/cl_sets_data"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_set_title">

                <android.support.constraint.Guideline
                    android:id="@+id/guid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="110dp" />

                <ImageView
                    android:id="@+id/iv_waifu_preview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#22aaaaaa"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toTopOf="@id/iv_fav"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/guid"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/cl_sets_preview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="5dp"
                    app:layout_constraintLeft_toRightOf="@id/guid"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/iv_fav"
                    app:layout_constraintRight_toRightOf="parent">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cl_waifu_1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:layout_constraintBottom_toTopOf="@id/cl_waifu_2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/iv_waifu_c1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="#22aaaaaa"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="#22aaaaaa"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c1"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_waifu_c3"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:background="#22aaaaaa"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c2"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c4"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_waifu_c4"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginRight="20dp"
                            android:background="#22aaaaaa"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c3"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cl_waifu_2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_waifu_1"
                        app:layout_constraintBottom_toTopOf="@id/cl_waifu_3">

                        <ImageView
                            android:id="@+id/iv_waifu_c5"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c6"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c6"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c5"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c7"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c7"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c6"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c8"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c8"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c7"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c9"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c9"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c8"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </android.support.constraint.ConstraintLayout>


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/cl_waifu_3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_waifu_2"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/iv_waifu_c10"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginLeft="20dp"
                            android:layout_marginStart="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c11"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c11"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c10"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c12"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c12"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c11"
                            app:layout_constraintRight_toLeftOf="@id/iv_waifu_c13"/>

                        <ImageView
                            android:id="@+id/iv_waifu_c13"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#22aaaaaa"
                            android:layout_marginRight="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_waifu_c12"
                            app:layout_constraintRight_toRightOf="parent"/>

                    </android.support.constraint.ConstraintLayout>


                </android.support.constraint.ConstraintLayout>

                <ImageView
                    android:id="@+id/iv_fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:tint="#ffffff"
                    android:background="@drawable/button_states"
                    app:srcCompat="@drawable/ic_favorite_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_sets_data"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="#11ffffff"
                app:layout_constraintBottom_toTopOf="@id/cl_bss"
                app:layout_constraintTop_toBottomOf="@id/cl_config_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="InformaciÃ³n del Conjunto:"
                        android:textStyle="bold"
                        android:textColor="@color/golden_textcolor"
                        android:textSize="13dp"/>

                    <TextView
                        android:id="@+id/tv_waifu_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="-info-"
                        android:textColor="#ffffff"
                        android:textSize="13dp"/>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_bss"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:paddingTop="1dp"
                android:background="#dd232F58"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:id="@+id/bt_conf_delete"
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@drawable/button_states3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/bt_conf_edit"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:tint="@color/icons_warning_tint"
                        app:srcCompat="@drawable/ic_delete_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:text="Eliminar"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_conf_accept"
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@drawable/button_states3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/bt_conf_close"
                    app:layout_constraintStart_toEndOf="@id/bt_conf_edit"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_check_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:text="Usar"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_conf_edit"
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@drawable/button_states3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/bt_conf_accept"
                    app:layout_constraintStart_toEndOf="@id/bt_conf_delete"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_edit_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:text="Editar"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_conf_close"
                    android:layout_width="50dp"
                    android:layout_height="43dp"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@drawable/button_states3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bt_conf_accept"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_clear_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#000000"
                        android:textSize="11dp"
                        android:text="Cerrar"/>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>